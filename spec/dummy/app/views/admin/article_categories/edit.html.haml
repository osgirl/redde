- content_for :page_header do
  %h1
    - if @article_category.new_record?
      Добавить #{taccusative(:article_category)}
    - else
      Редактировать #{taccusative(:article_category)}
  %p= link_to 'Назад', [:admin, :article_categories]

= form_for [:admin, @article_category], builder: ReddeFormBuilder do |f|
  = f.error_messages
  %table
    = f.redde_field :visible
    = f.redde_field :title
  %div= render 'redditor/admin/page', { f: f } if @article_category.methods.include?(:page)
  = render 'admin/seos/block', { f: f } if @article_category.methods.include?(:seo)
  = f.redde_submits
