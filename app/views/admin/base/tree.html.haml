= page_header

- res_collection = instance_variable_get("@#{collection}")
- if res_collection.any?
  - cache [model_name.maximum(:updated_at).to_i] do
    %ol.sort-tree{ 'data-sort-tree' => '' }= render partial: 'tree_item', collection: res_collection, as: :item

- else
  %h3
    Ни одной
    #{tplural(model_name)}
    не найдено
